{
  "name": "lumina",
  "version": "1.0.0",
  "description": "A macOS app for toggling system appearance modes",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc && electron .",
    "build": "tsc",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "start": "electron .",
    "test": "jest",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "keywords": [
    "electron",
    "macos",
    "dark-mode",
    "theme",
    "appearance"
  ],
  "author": "Lumina",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "globals": "^16.5.0",
    "jest": "^29.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.lumina.switch",
    "productName": "Lumina",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "darkModeSupport": true,
      "extendInfo": {
        "LSUIElement": true
      }
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "../python/dist/theme-toggle",
        "to": "theme-toggle"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
